<h1>Sign in</h1>

<div data-role="content">
  <%= form_for(:session, url: sessions_path) do |f| %>

  	<div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
    	<%= f.label :password %>
    	<%= f.password_field :password %>
    </div>

    <div class="actions">
    	<%= f.submit "Sign in" %>
    </div>
  <% end %>

  <p>New to Task RPG? <%= link_to "Sign up today!", signup_path %></p>

</div>