!!!
%html
  %head
    %title Task RPG
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
      = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
      = javascript_include_tag "application", "data-turbolinks-track" => true
      = csrf_meta_tags
  %body
    %div{"data-role" => "page", "data-url" => request.path}
      - if signed_in?
        = link_to current_user.email, current_user, "data-role" => "button", "data-inline" => "true"
        = link_to 'Sign Out', signout_path, method: "delete", "data-role" => "button", "data-inline" => "true"
      - else
        = link_to 'Sign Up', signup_path, "data-role" => "button", "data-inline" => "true"
        = link_to 'Sign In', signin_path, "data-role" => "button", "data-inline" => "true"
      %br
        - flash.each do |key, value|
          #error_explanation= value
        = yield